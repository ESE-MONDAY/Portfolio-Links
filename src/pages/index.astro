---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Ese Monday - Portfolio">
	<main>
		<div class="hero-section">
			<div class="intro-section">
				<img
					src="/profile-photo.jpeg"
					alt="Picture of Ese Monday"
					class="profile-picture"
				/>
				<h1 class="intro-title">Ese Monday</h1>
				<p class="intro-subtitle">
					Ese Monday is a Frontend Engineer with extensive knowledge of open
					source, blockchain, and software products
				</p>
			</div>
			<div class="bento-cards">
				<Card
					title="Twitter"
					body="Follow me"
					href="https://twitter.com/EseMonday1"
				/>
				<Card
					title="Twitter"
					body="Follow me"
					href="https://twitter.com/EseMonday1"
				/>
				<Card
					title="Twitter"
					body="Follow me"
					href="https://twitter.com/EseMonday1"
				/>
				<Card
					title="Twitter"
					body="Follow me"
					href="https://twitter.com/EseMonday1"
				/>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
		padding: 2rem;
	}
	.hero-section {
		display: flex;
		gap: 2rem;
	}
	.intro-section {
		width: 40%;
		display: flex;
		flex-direction: column;
		position: sticky;
		justify-content: center;
		padding: 2rem 0;
	}
	.intro-title {
		font-size: 36px;
		font-weight: 600;
	}
	.intro-subtitle {
		font-size: 16px;
		font-weight: 300;
	}
	.profile-picture {
		height: 150px;
		width: 150px;
		border-radius: 100%;
	}
	.bento-cards {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
	}
	@media screen and (max-width: 800px) {
		.hero-section {
			flex-direction: column;
		}
		.intro-section {
			width: 100%;
		}
	}
</style>
